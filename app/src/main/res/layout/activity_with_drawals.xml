<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical"
    >

    <include layout="@layout/head_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/linearWX"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txtWX"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="提现到微信零钱"
                android:textSize="@dimen/text_large"
                android:textColor="@drawable/text_black_red"
                />

            <ImageView
                android:id="@+id/imgWX"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/img_black_red"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearBank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txtBank"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="提现到银行卡"
                android:textSize="@dimen/text_large"
                android:textColor="@drawable/text_black_red"
                />

            <ImageView
                android:id="@+id/imgBank"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/img_black_red"
                />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        />
</LinearLayout>