<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/load_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@color/main_bg"
        >
        <!--<com.wlyilai.weilaibao.view.MyLoadingIndicatorView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:indicatorColor="@color/ping_gou"
            app:indicatorName="LineSpinFadeLoaderIndicator"
            style="@style/MyLoadingIndicatorView.Small"
            />-->
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/loadmore_progress"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/loadMoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="正在加载..."
            android:layout_marginLeft="10dp"
            android:textColor="@color/ping_gou"/>
    </LinearLayout>



</LinearLayout>